<p id="notice"><%= notice %></p>

<h1>Employee Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Employee detail</th>
      <th>Job</th>
      <th>Employeer job situation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_jobs.each do |employee_job| %>
      <tr>
        <td><%= employee_job.employee_detail %></td>
        <td><%= employee_job.job %></td>
        <td><%= employee_job.employeer_job_situation %></td>
        <td><%= link_to 'Show', employee_job %></td>
        <td><%= link_to 'Edit', edit_employee_job_path(employee_job) %></td>
        <td><%= link_to 'Destroy', employee_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

