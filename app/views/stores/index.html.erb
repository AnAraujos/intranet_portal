<p id="notice"><%= notice %></p>
  <div class="row">      
    <div class="col-md-10">
      <p>::Listing Stores</p>
    </div>
    <div class="col-md-4-right">
      <%= button_to 'New Store',  new_store_path, :class => 'btn btn-primary', :method => :get%> </div>
  </div>
  </br>
<div class="container">
  <div class="row">
    <div class="col-auto">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td><%= store.name %></td>
            <td><%= store.active %></td>
            <td><%= button_to 'Show', store, :class => 'btn btn-success btn-sm', :method => :get %></td>
            <td><%= button_to 'Edit', edit_store_path(store),:class => 'btn btn-info btn-sm', :method => :get  %></td>
            <td><%= button_to 'Destroy', store, :class => 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' }  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

